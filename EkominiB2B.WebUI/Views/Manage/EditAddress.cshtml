@model Address
@{
    Layout = "_LayoutUser";
    ViewData["Title"] = "Adres Düzenle";
}
<style>
</style>
<div class="m-grid__item m-grid__item--fluid m-wrapper">
    <!-- END: Subheader -->
    <div class="m-content">
        <div class="row">
            @await Component.InvokeAsync("ProfileNav")

            <div class="col-xl-9 col-lg-7 m--margin-bottom-10-mobile" style="margin-top:-50px">
                <div class="m-portlet m-portlet--creative m-portlet--bordered-semi">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h2 class="m-portlet__head-label m-portlet__head-label--focus">
                                    <span>
                                        Adres Düzenle
                                    </span>
                                </h2>
                            </div>
                        </div>
                    </div>
                    <div class="m-portlet__body">

                        <form asp-action="EditAddress" method="post" class="m-form m-form--fit m-form--label-align-right" enctype="multipart/form-data">
                            <input type="hidden" asp-for="Id" value="@Model.Id" />
                            <input type="hidden" asp-for="CreatedAt" value="@Model.CreatedAt" />
                            <input type="hidden" asp-for="CreatedBy" value="@Model.CreatedBy" />
                            <input type="hidden" asp-for="UpdatedAt" value="@Model.UpdatedAt" />
                            <input type="hidden" asp-for="UpdatedBy" value="@Model.UpdatedBy" />
                            <input type="hidden" asp-for="ApplicationUserId" value="@Model.ApplicationUserId" />
                            <input type="hidden" asp-for="IsDefault" value="@Model.IsDefault" />
                            <div class="m-portlet__body">
                                <div class="form-group m-form__group row">
                                    <label class="col-2 col-form-label">
                                        Adres Adı *
                                    </label>
                                    <div class="col-7">
                                        <input asp-for="AddressName" class="form-control m-input" type="text" value="@Model.AddressName">
                                    </div>
                                </div>
                                <div class="form-group m-form__group row">
                                    <label class="col-2 col-form-label">
                                        Şube
                                    </label>
                                    <div class="col-7">
                                        <input asp-for="Branch" class="form-control m-input" type="text" value="@Model.Branch">
                                    </div>
                                </div>
                                <div class="form-group m-form__group row">
                                    <label for="example-text-input" class="col-2 col-form-label">
                                        Adress *
                                    </label>
                                    <div class="col-7">
                                        <input asp-for="AddressDefination" class="form-control m-input" type="text" value="@Model.AddressDefination">
                                    </div>
                                </div>
                                <div class="form-group m-form__group row">
                                    <label for="example-text-input" class="col-2 col-form-label">
                                        İlçe *
                                    </label>
                                    <div class="col-7">
                                        <input asp-for="District" class="form-control m-input" type="text" value="@Model.District">
                                    </div>
                                </div>
                                <div class="form-group m-form__group row">
                                    <label for="example-text-input" class="col-2 col-form-label">
                                        İl *
                                    </label>
                                    <div class="col-7">
                                        <input asp-for="City" class="form-control m-input" type="text" value="@Model.City">
                                    </div>
                                </div>
                                <div class="form-group m-form__group row">
                                    <label for="example-text-input" class="col-2 col-form-label">
                                        Ülke *
                                    </label>
                                    <div class="col-7">
                                        <input asp-for="Country" class="form-control m-input" type="text" value="@Model.Country">
                                    </div>
                                </div>
                            </div>
                            <div class="m-portlet__foot m-portlet__foot--fit">
                                <div class="m-form__actions">
                                    <div class="row">
                                        <div class="col-2"></div>
                                        <div class="col-7">
                                            <button type="submit" class="btn btn-accent m-btn m-btn--air m-btn--custom">
                                                Kaydet
                                            </button>
                                            &nbsp;&nbsp;
                                            <a asp-action="MyAddress" class="btn btn-secondary m-btn m-btn--air m-btn--custom">
                                                Vazgeç
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>

@section scripts {
    <script>

    </script>
}


