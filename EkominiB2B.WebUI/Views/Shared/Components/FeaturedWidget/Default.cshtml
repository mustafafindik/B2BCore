@model IEnumerable<Product>

<div class="widget widget-featured">
    <h3 class="widget-title">Tavsiye Ürünler</h3>
    <div class="widget-body">
        <div class="owl-carousel widget-featured-products">

            @{var j = 0; }

            @for (int i = 0; i < Model.Count() / 3; i++)
            {
                var s = j * 3;
                <div class="featured-col">
                    @foreach (var item in Model.Skip(s).Take(3))
                    {

                        <div class="product product-sm">
                            <figure class="product-image-container">
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id" class="product-image">
                                    <img src="@item.Image" alt="product">
                                </a>
                            </figure>
                            <div class="product-details">
                                <h2 class="product-title" style="font-size:13px !important;">
                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id"> @item.ProductName</a>
                                </h2>
                                <div class="ratings-container">
                                    <div class="product-ratings">
                                        <span class="ratings" style="width:90%"></span><!-- End .ratings -->
                                    </div><!-- End .product-ratings -->
                                </div><!-- End .product-container -->
                                <div class="price-box">
                                    <span class="product-price"> @String.Format(System.Globalization.CultureInfo.GetCultureInfo("tr-TR"), "{0:N2}", item.Price)  ₺ </span>
                                </div><!-- End .price-box -->
                            </div><!-- End .product-details -->
                        </div><!-- End .product -->

                    }
                </div><!-- End .featured-col -->
                j++;
            }

        </div><!-- End .widget-featured-slider -->
    </div><!-- End .widget-body -->
</div><!-- End .widget -->
