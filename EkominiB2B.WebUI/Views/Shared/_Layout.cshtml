<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title> @ViewData["Title"]</title>
    <meta name="keywords" content="Ekomini" />
    <meta name="description" content="Ekomini">
    <meta name="author" content="Mustafa Fındık">
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/porto/images/icons/favicon.ico">
    <!-- Plugins CSS File -->
    <link rel="stylesheet" href="/porto/css/bootstrap.min.css">
    <!-- Main CSS File -->
    <link rel="stylesheet" href="/porto/css/style.min.css">
    <style>
        .menu > li > a {
          
            margin-top: 10px;
        }
-
           
    </style>
</head>
<body>
    <div class="page-wrapper">
        <header class="header">
            <div class="header-top">
                <div class="container">
                    <div class="header-left header-dropdowns">
                    </div><!-- End .header-left -->
                    <div class="header-right">
                        <p class="welcome-msg">
                            @{
                                if (User.Identity.Name == null || User.Identity.Name == "")
                                {
                                    <span class="username username-hide-on-mobile">Merhaba,  Ziyaretçi   </span>
                                }
                                else
                                {
                                    <span class="username username-hide-on-mobile">Merhaba, @User.Identity.Name  </span>


                                }
                            }
                        </p>
                        <div class="header-dropdown dropdown-expanded">
                            <a href="#">Hoşgeldiniz </a>
                            <div class="header-menu">
                                <ul>
                                    @{
                                        if (User.Identity.Name == null || User.Identity.Name == "")
                                        {

                                            <li><a asp-controller="Account" asp-action="Login">GİRİŞ YAP</a></li>
                                            <li><a asp-controller="Account" asp-action="Register"> KAYIT OL</a></li>

                                        }
                                        else
                                        {
                                            <li><a asp-controller="Manage" asp-action="Index"> HESABIM </a></li>
                                            <li><a asp-controller="Manage" asp-action="MyOrders"> Siparişlerim </a></li>
                                            <li>
                                                <a asp-controller="Account" asp-action="Register">
                                                    Mesajlar <span style="margin-bottom: 10px;margin-left: 5px;" class="badge badge-success">0</span>
                                                </a>
                                            </li>
                                            <li><a href="/Supplier"> TEDARİKÇİ PANELİ </a></li>
                                            <li><a href="/Admin"> ADMİN PANELİ </a></li>
                                            <li><a href="javascript:void(0);" onclick="document.getElementById('logoutForm').submit();"> ÇIKIŞ YAP</a></li>

                                        }
                                    }
                                    <form method="post" action="@Url.Action("Logout", "Account")" id="logoutForm" style="display:none;">
                                        @Html.AntiForgeryToken()
                                    </form>
                                </ul>
                            </div><!-- End .header-menu -->
                        </div><!-- End .header-dropown -->
                    </div><!-- End .header-right -->
                </div><!-- End .container -->
            </div><!-- End .header-top -->
            <div class="header-middle">
                <div class="container">
                    @await Component.InvokeAsync("SearchBar", ViewBag.categoryId==null?0:(int)ViewBag.categoryId)
                    <div class="header-center">
                        <a href="/" class="logo">
                            <img src="/porto/images/logo.png" alt="Porto Logo">
                        </a>
                    </div><!-- End .headeer-center -->
                    <div class="header-right">
                        <div class="header-contact">
                            <span>Bizi Arayın..</span>
                            <a href="tel:#"><strong>+90 (216) 366 68 00</strong></a>
                        </div><!-- End .header-contact -->



                        @await Component.InvokeAsync("CartSummary")
                       


                    </div><!-- End .header-right -->
                </div><!-- End .container -->
            </div><!-- End .header-middle -->
            <div class="header-bottom sticky-header">
                <div class="container">
                    <nav class="main-nav">
                        <ul class="menu sf-arrows">
                            <li class="active"><a href="/"> Anasayfa </a></li>
                            <li>
                                @await Component.InvokeAsync("CategoriesLayout")
                            </li>
                            <li class="float-right"><a asp-action="Index" asp-controller="Product">Ürünler</a></li>
                            <li class="float-right"><a asp-action="About" asp-controller="Home">Hakkımızda</a></li>
                            <li class="float-right"><a asp-action="Contact" asp-controller="Home">İletişim</a></li>
                            <li class="float-right"><a  style="color:#2196f3" asp-action="Campaigns" asp-controller="Home">Kampanyalar <span class="tip tip-new">Hemen Tıkla!</span> </a></li>
                            <li class="float-right"><a asp-action="Index" asp-controller="Announcement">Duyurular</a></li>
                        </ul>
                    </nav>
                </div><!-- End .header-bottom -->
            </div><!-- End .header-bottom -->
        </header><!-- End .header -->
        @RenderBody()


        <footer class="footer">
            <div class="footer-middle">
                <div class="container">
                    <div class="footer-ribbon">
                       İletişimde Kalın
                    </div><!-- End .footer-ribbon -->
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="widget">
                                        <ul class="contact-info">
                                            <li>
                                                <span class="contact-info-label">Adres:</span> Altintepe Mah.Bagdat Cad.Tipili, Gündoğdu Cd. No:1/21, 34840 Maltepe/İstanbul
                                            </li>
                                            <li>
                                                <span class="contact-info-label">Tel :</span><a href="tel:">(0216) 366 68 00</a>
                                            </li>
                                    
                                        </ul>
                                    </div><!-- End .widget -->
                                </div><!-- End .col-md-5 -->
                                <div class="col-md-5">
                                    <div class="widget">
                                        <ul class="contact-info">
                                     
                                            <li>
                                                <span class="contact-info-label">Mail Adresi:</span> <a href="mailto:info@cenasis.com.tr">info@cenasis.com.tr</a>
                                            </li>
                                            <li>
                                                <span class="contact-info-label">Çalışma Saatleri:</span>
                                                Pazt. - Cuma / 9:00 - 18:00
                                            </li>
                                        </ul>
                                    </div><!-- End .widget -->
                                </div><!-- End .col-md-5 -->
                                <div class="col-md-2">
                                    <div class="widget">
                                        <h4 class="widget-title">Kısayollar</h4>
                                        <ul class="links">
                                            <li><a asp-action="Index" asp-controller="Product">Ürünler</a></li>
                                            <li><a asp-action="About" asp-controller="Home">Hakkımızda</a></li>
                                            <li><a asp-action="Contact" asp-controller="Home">İletişim</a></li>
                                              
                                        </ul>
                                    </div><!-- End .widget -->
                                </div><!-- End .col-md-3 -->
                    
                            </div><!-- End .row -->
                        </div><!-- End .col-lg-8 -->
                        <div class="col-lg-4">
                            <div class="widget widget-newsletter">
                                <h4 class="widget-title">Orderbox </h4>
                                <p>7 Gün 24 Saat Sipariş verebilirsiniz..</p>
                           
                            </div><!-- End .widget -->
                        </div><!-- End .col-lg-4 -->
                    </div><!-- End .row -->
                </div><!-- End .container -->
            </div><!-- End .footer-middle -->
            <div class="container">
                <div class="footer-bottom">
                    <p class="footer-copyright">Cenasis Yazılım Hiz. &copy;  2018.  All Rights Reserved</p>
                    <img src="/porto/images/payments.png" alt="payment methods" class="footer-payments">
                    <div class="social-icons">
                        <a href="#" class="social-icon" target="_blank"><i class="icon-facebook"></i></a>
                        <a href="#" class="social-icon" target="_blank"><i class="icon-twitter"></i></a>
                        <a href="#" class="social-icon" target="_blank"><i class="icon-linkedin"></i></a>
                    </div><!-- End .social-icons -->
                </div><!-- End .footer-bottom -->
            </div><!-- End .containr -->
        </footer><!-- End .footer -->
    </div><!-- End .page-wrapper -->


    @await Component.InvokeAsync("MobileMenu")
    <a id="scroll-top" href="#top" title="Top" role="button"><i class="icon-angle-up"></i></a>
    <!-- Plugins JS File -->
    <script src="/porto/js/jquery.min.js"></script>
    <script src="/porto/js/bootstrap.bundle.min.js"></script>
    <script src="/porto/js/plugins.min.js"></script>
    <!-- Main JS File -->
    <script src="/porto/js/main.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>




